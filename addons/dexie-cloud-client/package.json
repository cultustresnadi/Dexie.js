{
  "name": "dexie-cloud-client",
  "version": "1.0.0-alpha.1",
  "description": "Dexie addon that connects to dexie.cloud",
  "main": "dist/dexie-cloud-client.js",
  "module": "dist/dexie-cloud-client.mjs",
  "typings": "dist/dexie-cloud-client.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dfahlander/Dexie.js.git"
  },
  "scripts": {
    "test": "just-build test && npm run test-unit",
    "test-unit": "karma start test/unit/karma.conf.js --single-run",
    "build": "just-build",
    "watch": "just-build --watch",
    "clean": "rm -rf tools/tmp dist/*.js dist/*.mjs dist/*.map dist/*.d.ts test/bundle.*"
  },
  "just-build": {
    "default": [
      "just-build release",
      "just-build test"
    ],
    "release": [
      "just-build src",
      "# Copy dexie-cloud-client.d.ts to dist and replace version in it",
      "node -e \"fs.writeFileSync('dist/dexie-cloud-client.d.ts', fs.readFileSync('tools/tmp/src/dexie-cloud-client.d.ts'))\"",
      "node tools/replaceVersionAndDate.js dist/dexie-cloud-client.d.ts",
      "# Minify the default ES5 UMD module",
      "cd dist",
      "uglifyjs dexie-cloud-client.js -m -c negate_iife=0 -o dexie-cloud-client.min.js --source-map"
    ],
    "src": [
      "tsc -p src",
      "rollup -c tools/build-configs/rollup.config.js",
      "node tools/replaceVersionAndDate.js dist/dexie-cloud-client.js dist/dexie-cloud-client.mjs"
    ],
    "bundle-dts": [
      "dts-bundle-generator -o dist/"
    ],
    "test": [
      "just-build test-unit"
    ],
    "test-unit": [
      "tsc -p test [--watch 'Watching for file changes.']",
      "rollup -c tools/build-configs/rollup.test.unit.config.js"
    ]
  },
  "author": "david.fahlander@gmail.com",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^14.6.3",
    "base64-arraybuffer-es6": "^0.6.0",
    "just-build": "^0.9.19",
    "karma": "^5.2.1",
    "karma-browserstack-launcher": "^1.6.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-qunit": "^4.1.1",
    "rollup": "^2.26.9",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2",
    "typeson": "^5.18.2",
    "typeson-registry": "^1.0.0-alpha.38"
  },
  "dependencies": {
    "dexie": "^3.0.2",
    "dexie-observable": "^3.0.0-beta.9",
    "dexie-syncable": "^3.0.0-beta.9"
  }
}
